# Database configuration (set DATABASE_URL or the DB_* values)
# If you provide an async driver (e.g., mysql+asyncmy / sqlite+aiosqlite),
# it will be normalized to a sync driver for the current engine setup.
DATABASE_URL=mysql+pymysql://user:pass@localhost:3306/yorizo
DB_HOST=your-mysql-host
DB_PORT=3306
DB_USERNAME=your-db-user
DB_PASSWORD=your-db-password
DB_NAME=yorizo

# Azure OpenAI (guided chat で利用)
AZURE_OPENAI_ENDPOINT=https://aoai-10th.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_key_here
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-5-mini   # 実際のデプロイ名に合わせて変更
AZURE_OPENAI_API_VERSION=2025-04-01-preview

# ※以下は旧実装で使用していた OpenAI (非Azure) 用の設定です。
# 現在のチャット機能では使用していません。
# OPENAI_API_KEY=sk-xxxx
# OPENAI_MODEL_CHAT=gpt-4.1-mini
# OPENAI_MODEL_EMBEDDING=text-embedding-3-small
RAG_PERSIST_DIR=./rag_store
ENABLE_RAG=true
CORS_ORIGINS=http://localhost:3000
